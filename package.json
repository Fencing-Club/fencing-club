{
  "name": "piste-repo",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "storybook:build": "turbo run storybook:build",
    "prepare": "husky install"
  },
  "devDependencies": {
    "eslint-config-piste": "*",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "prettier": "latest",
    "turbo": "latest"
  },
  "packageManager": "npm@8.19.3"
}
